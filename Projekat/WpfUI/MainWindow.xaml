<Window
 x:Class="WpfUI.MainWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:veiwModel="clr-namespace:WpfUI.ViewModel"
 xmlns:view="clr-namespace:WpfUI.View"
 Title="MainWindow"
 Width="947"
 Height="700"
 Background="{DynamicResource MaterialDesignLightBackground}"
 mc:Ignorable="d">

    <Window.DataContext>
        <veiwModel:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type veiwModel:AddKormilarVewModel}">
            <view:AddKormilarView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddMornarViewModel}">
            <view:AddMornarView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddBrodogradilisteViewModel}">
            <view:AddBrodogradilisteView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddBrodskaLinijaViewModel}">
            <view:AddBrodskaLinijaView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddBrodViewModel}">
            <view:AddBrodView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddKapetanViewModel}">
            <view:AddKapetanView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddTeretniBrodViewModel}">
            <view:AddTeretniBrodView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddTankerViewModel}">
            <view:AddTankerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddKruzerViewModel}">
            <view:AddKruzerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type veiwModel:AddPosadaViewModel}">
            <view:AddPosadaView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Menu
         Width="932"
         HorizontalAlignment="Center"
         VerticalAlignment="Top">
            <MenuItem Command="{Binding KormilarCommand}" Header="Kormilar" />
            <MenuItem Command="{Binding MornarCommand}" Header="Mornar" />
            <MenuItem Command="{Binding BrodogradilisteCommand}" Header="Brodogradiliste" />
            <MenuItem Command="{Binding BrodskaLinijaCommand}" Header="Brodska linija" />
            <MenuItem Command="{Binding BrodCommand}" Header="Brod" />
            <MenuItem Command="{Binding KapetanCommand}" Header="Kapetan" />
            <MenuItem Command="{Binding TeretniBrodCommand}" Header="Teretni brod" />
            <MenuItem Command="{Binding TankerCommand}" Header="Tanker" />
            <MenuItem Command="{Binding KruzerCommand}" Header="Kruzer" />
            <MenuItem Command="{Binding PosadaCommand}" Header="Posada" />
        </Menu>
        <ContentControl
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         HorizontalContentAlignment="Center"
         VerticalContentAlignment="Center"
         Content="{Binding CurrentViewModel}"
         DockPanel.Dock="Top" />
        <design:Snackbar MessageQueue="{Binding MessageQueue}" />
    </Grid>
</Window>
