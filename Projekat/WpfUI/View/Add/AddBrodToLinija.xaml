<Window
 x:Class="WpfUI.View.AddBrodToLinija"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
 xmlns:local="clr-namespace:WpfUI.View"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 Name="win"
 Title="Edit"
 Width="227"
 Height="126.517"
 WindowStartupLocation="CenterOwner"
 WindowStyle="ToolWindow"
 mc:Ignorable="d">
    <Grid>
        <StackPanel
         Width="200"
         HorizontalAlignment="Center"
         VerticalAlignment="Center">
            <ComboBox
             Width="200"
             design:ComboBoxAssist.ShowSelectedItem="false"
             design:HintAssist.Hint="Brodska linija"
             ItemsSource="{Binding Linije}"
             SelectedIndex="{Binding Selectedindex}"
             SelectedItem="{Binding SelectedLinija}"
             Style="{DynamicResource MaterialDesignFloatingHintComboBox}" />

            <Button
             Width="200"
             Margin="0,5"
             Command="{Binding EditCommand}"
             CommandParameter="{Binding ElementName=win}"
             Content="Save" />
        </StackPanel>
    </Grid>
</Window>
